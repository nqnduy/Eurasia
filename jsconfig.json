{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/website/*": ["components/website/*"],
      "@/components/*": ["components/*"],
      "@/dashkit/*": ["components/dashkit/*"],
      "@/diginext/*": ["components/diginext/*"],
      "@/helpers/*": ["modules/helpers/*"],
      "@/constants/*": ["modules/constants/*"],
      "@/plugins/*": ["plugins/*"]
    }
  },
  "exclude": [
    ".git",
    ".npm",
    ".npm-tmp",
    "out",
    "out*",
    "node_modules",
    "**/out/*",
    "**/node_modules/*"
  ]
}
